<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\BackendPlatform.Core\BackendPlatform.Core.csproj" />
    <ProjectReference Include="..\BackendPlatform.Service\BackendPlatform.Service.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy $(TargetPath) $(SolutionDir)BackendPlatform.API\$(OutDir)$(TargetFileName) /Y" />
  </Target>

</Project>
